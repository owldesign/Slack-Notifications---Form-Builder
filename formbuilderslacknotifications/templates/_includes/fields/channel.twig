{% set name = 'notifications[slack]['~ item ~'][channel]' %}

{% set container = {
    title: 'Channel' |t,
    info: 'What channel to post in? Include # or @' |t,
    icon: null,
    toggle: false,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'text',
        name: name,
        value:  attribute(form.notifications.slack, item).channel is defined and attribute(form.notifications.slack, item).channel != '' ? attribute(form.notifications.slack, item).channel : '',
        class: 'hidden',
        id: null,
        hint: 'CHANNEL'
    }
} %}

{% set modal = {
    title: 'Slack Channel' |t,
    instructions: 'What channel to post in?' |t,
    successMessage: 'Slack Channel Updated' |t,
    inputs: inputs
} %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}