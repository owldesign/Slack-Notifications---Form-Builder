{% set name = 'notifications[slack]['~ item ~'][text]' %}

{% set container = {
    title: 'Text' |t,
    info: 'Include optional text' |t,
    icon: null,
    toggle: false,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'text',
        name: name,
        value:  attribute(form.notifications.slack, item).text is defined and attribute(form.notifications.slack, item).text != '' ? attribute(form.notifications.slack, item).text : '',
        class: 'hidden',
        id: null,
        hint: 'TEXT'
    }
} %}

{% set modal = {
    title: 'Text' |t,
    instructions: 'Include optional text.' |t,
    successMessage: 'Slack Text Updated' |t,
    inputs: inputs
} %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}